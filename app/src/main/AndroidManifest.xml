<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.xmn.kotlinstarter">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.movies.MoviesActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/MovieTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".features.MainActivity"/>
        <activity android:name=".features.weather.presentation.WeatherActivity">
        </activity>
        <activity
            android:name=".features.movies.MovieDetailsActivity"
            android:theme="@style/MovieTheme.Translucent">
        </activity>
    </application>

</manifest>