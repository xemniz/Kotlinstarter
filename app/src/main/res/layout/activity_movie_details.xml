<?xml version="1.0" encoding="utf-8"?>
<ru.xmn.kotlinstarter.features.movies.elasticdrag.ElasticDragDismissFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draggableFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:dragDismissDistance="112dp"
    app:dragDismissScale="0.95">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/containerMovieDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:transitionName="CONTAINER_TRANSITION_NAME"
            tools:context="ru.xmn.kotlinstarter.features.movies.MovieDetailsActivity">

            <ImageView
                android:id="@+id/posterBlurBack"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:transitionName="POSTER_BACK_TRANSITION_NAME"
                app:layout_constraintBottom_toBottomOf="@id/posterBottomSpace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <android.support.v7.widget.CardView
                android:id="@+id/posterCard"
                android:layout_width="0dp"
                android:layout_height="375dp"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:layout_marginTop="36dp"
                android:transitionName="POSTER_TRANSITION_NAME"
                app:cardCornerRadius="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/poster"/>

                <ImageButton
                    android:id="@+id/playTrailerButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="8dp"
                    android:background="@drawable/play_button_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:tint="@android:color/white"
                    android:transitionName="TRAILER_BUTTON_TRANSITION_NAME"/>

                <LinearLayout
                    android:id="@+id/posterStarsLayout"
                    android:alpha="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_counts_poster_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/avatar"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_star_black_24dp"
                        android:tint="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <ImageView
                android:id="@+id/buttonHideArrow"
                android:layout_width="48dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:layout_constraintBottom_toTopOf="@id/posterCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Space
                android:id="@+id/posterBottomSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="164dp"
                app:layout_constraintTop_toBottomOf="@id/posterCard"/>

            <TextView
                android:id="@+id/movieName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Blade Runner 2049"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/posterCard"/>

            <include layout="@layout/layout_watched_wanted"/>

            <include layout="@layout/layout_movie_details"/>

            <include layout="@layout/layout_movie_details_buttons"/>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#ececec"
                app:layout_constraintTop_toBottomOf="@id/soundtracksButton"/>

            <include layout="@layout/layout_comments"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</ru.xmn.kotlinstarter.features.movies.elasticdrag.ElasticDragDismissFrameLayout>