<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/activity_movie_details">


    <LinearLayout
        android:id="@+id/director"
        layout="@layout/text_with_description_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/watchedButton">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Director"
            android:textAlignment="textStart"
            android:textColor="#212020"
            android:alpha=".3"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:text="Dennis Villeneuve"
            android:textAlignment="textStart"
            android:textColor="#454545"
            android:textSize="12sp"
            android:textAllCaps="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cast"
        layout="@layout/text_with_description_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/director">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cast"
            android:textAlignment="textStart"
            android:textColor="#212020"
            android:alpha=".3"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:text="Harrison Ford, Ryan Gosling, Robin Wright"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="#454545"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overview"
        layout="@layout/text_with_description_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cast">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha=".3"
            android:text="Overview"
            android:textAlignment="textStart"
            android:textColor="#212020"
            android:textSize="10sp"/>

        <ru.xmn.kotlinstarter.features.movies.ExpandableTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:text="Interstellar chronicles the adventures of a group of explorers  who make use of a newly discovered wormhole to surpass the Interstellar chronicles the adventures of a group of explorers who make use of a newly discovered wormhole to surpass the..."
            android:textAlignment="textStart"
            android:textColor="#454545"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/release"
        layout="@layout/text_with_description_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/overview">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Release"
            android:alpha=".3"
            android:textAlignment="textStart"
            android:textColor="#212020"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:text="December 15, 2017"
            android:textAlignment="textStart"
            android:textColor="#454545"
            android:textSize="12sp"/>
    </LinearLayout>
</merge>